{
  "name": "@airalogy/aimd-editor",
  "type": "module",
  "version": "1.0.0",
  "description": "AIMD editor with Monaco source mode and Milkdown WYSIWYG mode",
  "keywords": [
    "aimd",
    "monaco",
    "milkdown",
    "editor",
    "wysiwyg",
    "markdown",
    "vue"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./vue": {
      "types": "./src/vue/index.ts",
      "import": "./src/vue/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "vite build",
    "dev": "vite build --watch"
  },
  "dependencies": {
    "@airalogy/aimd-core": "workspace:*",
    "@airalogy/aimd-renderer": "workspace:*",
    "@codingame/monaco-vscode-editor-api": "^20.2.1",
    "@codingame/monaco-vscode-standalone-languages": "^20.2.1",
    "@milkdown/kit": "^7.18.0",
    "@milkdown/theme-nord": "^7.18.0",
    "@milkdown/vue": "^7.18.0"
  },
  "peerDependencies": {
    "monaco-editor": ">=0.50.0",
    "vue": ">=3.3.0"
  },
  "peerDependenciesMeta": {
    "monaco-editor": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "monaco-editor": "^0.52.2",
    "shiki": "^2.3.2",
    "typescript": "5.8.3",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vue": "^3.5.17",
    "@vitejs/plugin-vue": "^6.0.1"
  }
}